<%= form_for post do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :content%>
<%= f.text_field :content%>
<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, {include_blank: true})%>
<hr>
<%= f.fields_for "categories_attributes_0", @category do |c|%>
  <%=c.label :name%>
  <%=c.text_field :name%>
<%end%>
<%= f.submit%>
<%end%>
